<Window x:Class="Speko.Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Speko"
        Width="400" Height="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#AA1C1C1C"
        Topmost="True">
    <Border CornerRadius="10" Padding="10" Background="#CC000000" MouseDown="Window_MouseDown">
        <StackPanel>
            <TextBlock Text="🎤 Speko is Listening..." Foreground="White" FontSize="18" Margin="0 0 0 10"/>
            <Border Height="100" Background="#222" CornerRadius="5" Padding="10">
                <TextBlock x:Name="TranscriptText" Text="..." Foreground="LightGray" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </Border>
</Window>
